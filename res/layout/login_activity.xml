<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mclab.order.MainActivity" >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/please_login"/>
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_userid_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_userid_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/please_input_1234"
            android:text="@string/_1234" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_passwd_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_passwd_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/please_input_1234"
            android:text="@string/_1234" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login" />

</LinearLayout>